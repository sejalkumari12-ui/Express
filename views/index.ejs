<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sunset Media Studio</title>
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.7/swiper-bundle.min.css"
  />
  <link rel="stylesheet" href="../styles/style.css">
</head>

<body>
  <div class="loader" id="loader">
    <div class="loader-content">
      <div class="loader-logo">Sunset Media</div>
      <div class="loader-spinner"></div>
      <div class="loader-text">Loading Experience...</div>
    </div>
  </div>

  <header class="header">
    <div class="nav-container">
      <a href="#" class="logo">Sunset Media</a>
      <nav>
        <ul class="nav-menu">
          <li><a href="#home" class="nav-link">Home</a></li>
          <li><a href="#about" class="nav-link">About</a></li>
          <li><a href="#services" class="nav-link">Services</a></li>
          <li><a href="#portfolio" class="nav-link">Portfolio</a></li>
          <li><a href="#contact" class="nav-link">Contact</a></li>
        </ul>
      </nav>
    </div>
  </header>

  <!-- âœ… Fullscreen Hero Section -->
  <div class="sunset-hero-container" id="home">
    <div class="sunset-hero-fullscreen">
      <div class="swiper sunset-hero-slider">
        <div class="swiper-wrapper">
          <div class="swiper-slide">
            <video class="sunset-hero-video" autoplay muted loop playsinline>
              <source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/BigBuckBunny.mp4" type="video/mp4" />
            </video>
          </div>
          <div class="swiper-slide">
            <video class="sunset-hero-video" autoplay muted loop playsinline>
              <source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ElephantsDream.mp4" type="video/mp4" />
            </video>
          </div>
          <div class="swiper-slide">
            <video class="sunset-hero-video" autoplay muted loop playsinline>
              <source src="https://commondatastorage.googleapis.com/gtv-videos-bucket/sample/ForBiggerBlazes.mp4" type="video/mp4" />
            </video>
          </div>
        </div>
      </div>
      <div class="sunset-hero-overlay"></div>
      <div class="sunset-hero-content">
        <h1 class="sunset-hero-title">We are Sunset Media Studio</h1>
        <p class="sunset-hero-subtitle">
          Crafting cinematic content that brings your ideas to life with stunning visuals and creative storytelling.
        </p>
        <a href="#portfolio" class="sunset-hero-btn">Explore Our Work</a>
      </div>
    </div>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.7/swiper-bundle.min.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const loader = document.getElementById("loader");
      setTimeout(() => {
        loader.classList.add("hidden");
        setTimeout(() => {
          loader.style.display = "none";
        }, 800);
      }, 3000);

      new Swiper(".sunset-hero-slider", {
        loop: true,
        effect: "fade",
        autoplay: { delay: 5000, disableOnInteraction: false },
        speed: 1200,
      });
    });
  </script>
</body>
</html>
